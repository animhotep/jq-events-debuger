{
  "manifest_version": 2,

  "name": "jQuery events debuger",
  "version": "0.1",
  "description": "Shows the source code of jQuery event handlers",

  "icons": {
    "64" : "icon.png"
  },

  "browser_action": {
    "default_icon": "icon.png"
  },

  "background": { "page": "background.html" },

  "permissions": [ "tabs", "file://*/*", "http://*/*", "https://*/*" ],

  "web_accessible_resources": [ "contentscript.js" ]
}
